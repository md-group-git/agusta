mixin head(page)
    head
        meta(charset='UTF-8')
        meta(name='theme-color', content='#272727')
        meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
        meta(name='format-detection', content='telephone=no')
        meta(name='description' content= page.metaContent.description)
        meta(name='keywords', content= page.metaContent.keywords)
        meta(property="og:title" content= page.metaContent.title)
        meta(property="og:description" content= page.metaContent.description)
        meta(property="og:image" content="")
        meta(name="Abstract" content="")
        meta(name='robots', content='noindex')
        style.
            #{page.googleOptimizer.style}
        title= page.metaContent.title
