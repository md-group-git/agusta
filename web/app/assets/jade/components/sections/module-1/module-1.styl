.module-1
  position: relative
  margin-top: -1px
  &__text
    @media only screen and (max-width: 600px)
      padding-left: 25px
      padding-right: 25px
      text-align: left
  &__text-block
    h3
      margin-bottom: 52px
      @media only screen and (max-width: 1024px)
        text-align: center
    @media only screen and (max-width: 1024px)
      margin-bottom: 60px
  .line
    width: 152px
    height: 2px
    background-color: white
    margin-bottom: 60px
    @media only screen and (max-width: 1024px)
      margin-left: auto
      margin-right: auto
  &__blocks-wrap
    display: flex
    align-items center
    @media only screen and (max-width: 1024px)
      flex-wrap wrap
  &__text-block
    width: 474px
    padding-right: 140px
    @media only screen and (max-width: 1024px)
      width: 100%
      padding-right: 0
  &__img-block
    width: calc(100% - 474px)
    @media only screen and (max-width: 1024px)
      width: 100%
  &__btn-wrap
    @media only screen and (max-width: 1024px)
      margin-top: 40px
      display: flex
      justify-content center
  &__icon
    position: absolute
    left: 50%
    transform translateX(-50%)
    bottom: -60px
    z-index: 2