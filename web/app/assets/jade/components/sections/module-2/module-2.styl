    //  top: -615px
    //@media only screen and (max-width: 880px)
    //  top: -555px
    //@media only screen and (max-width: 820px)
    //  top: -520px
    //@media only screen and (max-width: 700px)
    //  top: -430px
    //@media only screen and (max-width: 630px)
    //  top: -475px
    //@media only screen and (max-width: 560px)
    //  top: -460px
    //@media only screen and (max-width: 484px)
    //  top: -386px
    //@media only screen and (max-width: 440px)
    //  top: -375px
    //@media only screen and (max-width: 400px)
    //  top: -345px
    //@media only screen and (max-width: 350px)
    //  top: -315px
  .block-price
    width: 33.3%
    @media only screen and (max-width: 992px)
      position: absolute
      top: 50%
      left: 50%
      transform translate(-50%,-50%)
      width: auto
    @media only screen and (max-width: 600px)
      bottom 190px
      top: auto
      left: 0
      transform none
    @media only screen and (max-width: 400px)
      bottom 180px

  &__slider-top
    position: absolute
    top 0
    left: 0
    width: 100%
    margin-top: 36px
    @media only screen and (max-width: 992px)
      position: static
      margin-top: 50px
    .slick-track,
    .slick-list
      overflow visible
    .line-descr
      display: flex
      margin-bottom: 25px
      @media only screen and (max-width: 600px)
        flex-wrap wrap
        justify-content center
        width: 33.3%
        position: relative
        padding-bottom 15px
    .line-descr-text
      margin-left: 12px
      @media only screen and (max-width: 600px)
        width: 100%
        text-align: center
        margin-left: 0
        margin-top: 8px
        height calc(100% - 40px)
    .line-descr-title
      font-weight: 600;
      font-size: 10px;
      line-height: 16px;
      text-transform: uppercase;
      color: #FFFFFF;
      margin-bottom: 6px
      @media only screen and (max-width: 436px)
        max-width 115px
        margin-left: auto
        margin-right: auto
    .line-descr-about
      ont-weight: 600;
      font-size: 18px;
      line-height: 16px;
      text-transform: uppercase;
      color: #FFFFFF;
      @media only screen and (max-width: 600px)
        position: static
        left: 50%
        bottom: 0
      span
        color brown
        font-size 14px
    .block-price
      display: flex
      align-items flex-end
      justify-content flex-end
      p
        font-weight: 600;
        font-size: 18px;
        line-height: 16px;
        text-transform: uppercase;
        color: #A1A1A1;
        text-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
        margin-bottom: 0
        @media only screen and (max-width: 400px)
          font-size: 14px;
      .price
        color brown
        font-size 32px
        line-height: 26px
        margin-left: 8px
        margin-right: 8px
        @media only screen and (max-width: 400px)
          font-size 28px
      .curency
        color brown
        font-size: 18px;

  &__sliders-wrap
    position: relative
    max-width 1140px
    margin-left: auto
    margin-right: auto
    @media only screen and (max-width: 768px)
      margin-top: 30px
  &__slider-middle
    position relative
    .slick-arrow
      position: absolute
      top: 60%
      transform translateY(-50%)
      z-index: 2
      cursor pointer
      path
        transform all .3s ease
      &:hover
        path
          stroke brown
    .module-2__slide--middle
      position: relative
      width: 1000px
      transition all .3s ease
      padding: 70px 70px 0
      @media only screen and (max-width: 992px)
        padding-top: 0
        width: 100vw
      @media only screen and (max-width: 600px)
        padding-left: 0
        padding-right: 0
      &.slick-slide
        img
          transition all .3s ease
      &.slick-slide:not(.slick-current)
        img
          transform scale(.8,.8)
    .next-btn
      right: 0
    .prev-btn
      left: 0
    .slick-list
      overflow visible
    .slick-active:not(.slick-current)
      .module-2__slide-middle-btn
        opacity: 0
    .slick-track
      display: flex
      align-items center
  &__slide-middle-btn
    position absolute
    bottom: -30px
    left: 50%
    transform translateX(-50%)
    background-color: #272727
    border none
    padding-left: 40px
    padding-right: 40px
    transition all .3s ease
    display: inline-block
    text-align: center
    @media only screen and (max-width: 600px)
      bottom -40px
      width: 236px
    &:hover
      background-color: white
  &__counter
    position: absolute
    bottom: -54px
    left: 0
    display: flex
    @media only screen and (max-width: 992px)
      bottom: 130px
      right: 0
      left auto
    @media only screen and (max-width: 600px)
      bottom 158px
    @media only screen and (max-width: 400px)
      bottom 150px
    p
      font-weight: 700;
      font-size: 36px;
      line-height: 43px;
      color #4F4F4F
      @media only screen and (max-width: 600px)
        font-weight: 600
      @media only screen and (max-width: 400px)
        font-size: 30px;
        line-height: 36px;
    .counter__curent
      color white
      margin-right: 12px

  &__icon
    position: absolute
    left: 50%
    transform translateX(-50%)
    bottom: -90px
    z-index: 2

.s-order + .module-2 {
  .module-2__icon {
    display: none
  }
}
