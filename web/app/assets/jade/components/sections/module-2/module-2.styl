.module-2
  position: relative
  overflow hidden

  &.top-overlay
    .module-2__overlay
      background: linear-gradient(180deg, #141414 0%, rgba(0, 0, 0, 0) 100%);
      transform: matrix(-1, 0, 0, 1, 0, 0);
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%

  &__title
    margin-bottom: 34px

  &__pretitle
    a
      transition all .3s ease
      &:hover
        color white
  &__slide--top
    display: flex!important
    justify-content space-between
    align-items flex-start
    @media only screen and (max-width: 992px)
      justify-content flex-start

  .block-descr
    width: 33.3%
    @media only screen and (max-width: 992px)
      width: 26%
    @media only screen and (max-width: 600px)
      width: 100%
      display: flex
      flex-wrap wrap
      margin-top: 100px
  .block-logo
    width: 33.3%
    margin-top: 10px
    display: flex
    justify-content center
    &--mob
      display: none
      @media only screen and (max-width: 992px)
        display: flex
        width: 100%
    &--desctp
      @media only screen and (max-width: 992px)
        display: none
    img
      max-width 310px
