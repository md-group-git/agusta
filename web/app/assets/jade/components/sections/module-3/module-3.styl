.module-3

  &__blocks-wrap
    display: flex
    max-width 600px
    margin-left: auto
    margin-right: auto
    margin-top: 80px
    @media only screen and (max-width: 680px)
      flex-wrap wrap
      margin-top: 0

  &__block
    position: relative
    display: flex
    flex-wrap wrap
    @media only screen and (max-width: 680px)
      width: 100%!important
      justify-content center!important
      padding: 0!important
      margin-bottom: 40px
      &:after
        display: none!important
    &:nth-child(1)
      justify-content flex-end
      padding-right: 85px
      &:after
        content ''
        display: block
        position: absolute
        right: -2px
        top: 50%
        transform translateY(-50%)
        background url("/img/icon-line-3.svg") center no-repeat
        height: 310px
        width: 2px
      .module-3__block-title
        text-align: right
    &:nth-child(2)
      padding-left: 85px
  &__block-title
    width: 100%
    font-size: 36px;
    line-height: 43px;
    text-transform: uppercase;
    color: white;
    @media only screen and (max-width: 680px)
      text-align center!important
    span
      display: block
      width: 100%
      font-size 24px
      line-height: 32px
      text-transform: none
  &__block-img-wrap
    margin-bottom: 32px
