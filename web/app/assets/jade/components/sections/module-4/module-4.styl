.module-4
  padding-top: 80px
  position: relative
  z-index: 1
  padding-bottom: 230px
  @media only screen and (max-width: 1400px)
    padding-top: 120px
  @media only screen and (max-width: 1260px)
    padding-top: 200px
  @media only screen and (max-width: 1024px)
    padding-top: 20px
  @media only screen and (max-width: 600px)
    padding-top: 30px
  &--price
    margin-top: -1px
    height: 76px
    padding-top: 8px
    padding-bottom: 8px
    margin-bottom: -76px
    background-color: #161616
    z-index: 4
    transition all .3s ease
    @media only screen and (max-width: 1400px)
      padding-top: 18px
      padding-bottom: 18px
    @media only screen and (max-width: 1024px)
      display: none
    //&.stick
    //  margin-top: 0



  .module-4__content
    margin-top: -30px
    @media only screen and (max-width: 1600px)
      padding-left: 46px
      padding-right: 46px
    @media only screen and (max-width: 992px)
      margin-top: 0
      padding-left: 25px
      padding-right: 25px
    @media only screen and (max-width: 600px)
      padding-left: 15px
      padding-right: 15px

  .block-price
    display: flex
    align-items flex-end
    justify-content flex-end
    p
      font-weight: 600;
      font-size: 18px;
      line-height: 16px;
      text-transform: uppercase;
      color: #A1A1A1;
      text-shadow: 0 4px 4px rgba(0, 0, 0, 0.25);
      margin-bottom: 0
      @media only screen and (max-width: 400px)
        font-size: 14px;
    .price
      color brown
      font-size 32px
      line-height: 26px
      margin-left: 8px
      margin-right: 8px
      @media only screen and (max-width: 992px)
        font-size 30px
      @media only screen and (max-width: 400px)
        font-size 28px
    .curency
      color brown
      font-size: 18px;

  &__content
    display: flex
    align-items center
    position: relative
    &--top
      display: none
      @media only screen and (max-width: 1024px)
        padding-top: 0
        padding-bottom 120px!important
        display: flex
        flex-wrap wrap
    &--slider
      position: relative

  &__price-block-wrap
    display: flex
    align-items center
    position: relative
    max-width 1680px
    padding-left: 40px
    padding-right: 40px
    margin-left auto
    margin-right auto
    z-index: 4
    @media only screen and (max-width: 992px)
      padding-left: 25px
      padding-right: 25px
    @media only screen and (max-width: 767px)
      display: none

  &__block
    width: 40%
    &--price
      display: flex
      justify-content center
      width: 20%
    @media only screen and (max-width: 1400px)
      width: 33.3%
    @media only screen and (max-width: 767px)
      width: 100%

  &__overlay
    position: absolute
    width: 100%
    height: 600px
    top: 0
    left: 0
    background: linear-gradient(180deg, #141414 0%, rgba(0, 0, 0, 0) 100%);
    transform: matrix(-1, 0, 0, 1, 0, 0);

  &__title
    font-style: italic;
    font-weight: 600;
    font-size: 24px;
    line-height: 30px;
    text-transform: uppercase;
    color: #FFFFFF;
    max-width 360px
    @media only screen and (max-width: 1400px)
      display: none

  .btns-wrap
    display: flex
    justify-content flex-end
    @media only screen and (max-width: 767px)
      flex-wrap wrap
      justify-content space-between
      width: 100%
      margin-top: 38px
    @media only screen and (max-width: 420px)
      justify-content center
      margin-top: 12px

  .btn--black
    @media only screen and (max-width: 1400px)
      position: absolute
      left: 46px
      top: 0
    @media only screen and (max-width: 992px)
      left: 25px
    @media only screen and (max-width: 767px)
      position: static

  .btn
    @media only screen and (max-width: 992px)
      padding-left: 14px
      padding-right: 14px
      margin-left: 0!important
    @media only screen and (max-width: 600px)
      font-size 12px
      line-height: 14px;
      span
        margin-top: 2px
    @media only screen and (max-width: 420px)
      margin-top: 20px
      margin-left: 12px!important
      margin-right: 12px!important




  .btn--white
    margin-left: 28px
    background-color: white
    border none
    span
      color red
    &:hover
      background-color: red
      span
        color white

  &__icon
    position: absolute
    left: 50%
    transform translateX(-50%)
    bottom: -60px
    z-index: 2
    &--bottom
      bottom: 30px


  &__content--slider
    position relative
    z-index: 2
    @media only screen and (max-width: 1024px)
      padding-left: 0!important
      padding-right: 0!important

  &__rotation-circle
    position absolute
    bottom: 20px
    width: 1920px
    left: -160px
    z-index: 1
    max-width inherit
    @media only screen and (max-width: 1600px)
      left: 0
      width: 100%
    @media only screen and (max-width: 1400px)
      display: block
      width: 1800px
      max-width inherit
      left: 50%
      transform translateX(-50%)
    @media only screen and (max-width: 1300px)
      width: 1600px
      bottom 0
    @media only screen and (max-width: 1024px)
      width: 160%
    @media only screen and (max-width: 600px)
      bottom: 5px


  &__rotation-slider
    max-width 1260px
    margin-left: auto
    margin-right: auto
    z-index: 2
    display: none
    &.active
      display: block
      cursor e-resize!important
    @media only screen and (max-width: 1400px)
      padding-left: 80px
      padding-right: 80px
    @media only screen and (max-width: 1260px)
      padding-left: 0
      padding-right: 0

  &__circle-slider-wrap
    position: relative
    @media only screen and (max-width: 1300px)
      padding-top: 60px
    @media only screen and (max-width: 1260px)
      padding-top: 40px
    .container
      z-index 2

  &__rotation-circle-num
    position: absolute
    font-weight: 700;
    font-size: 18px;
    line-height: 16px;
    text-align: center;
    color: #FFFFFF;
    bottom: 15px
    left 50%
    transform translateX(-50%)
    @media only screen and (max-width: 1300px)
      bottom: -5px
    @media only screen and (max-width: 600px)
      font-size 14px
      bottom: 0



  &__circle-slider-description
    position absolute
    top: 100px
    left: 0
    z-index: 2
    @media only screen and (max-width: 1600px)
      left: 46px
      max-width 220px
    @media only screen and (max-width: 1400px)
      top: 0
    //@media only screen and (max-width: 1300px)
    //  top: -50px
    @media only screen and (max-width: 1260px)
      position: static
      display: flex
      max-width inherit
      flex-wrap wrap
      justify-content space-between
      padding-left: 40px
      padding-right: 40px
      padding-top: 40px
      @media only screen and (max-width: 600px)
        padding-left: 15px
        padding-right: 15px
    .line-descr
      display: flex
      margin-bottom: 25px
      width: 100%
      @media only screen and (max-width: 1260px)
        width: 33.3%
        padding-right: 10px
      @media only screen and (max-width: 600px)
        width: 50%
        align-items flex-start
      svg
        width: 40px
        height: 40px
    .line-descr-text
      margin-left: 12px
      width: calc(100% - 52px)
    .line-descr-title
      font-weight: 600;
      font-size: 10px;
      line-height: 16px;
      text-transform: uppercase;
      color: #FFFFFF;
      margin-bottom: 6px
    .line-descr-about
      ont-weight: 600;
      font-size: 18px;
      line-height: 16px;
      text-transform: uppercase;
      color: #FFFFFF;
      span
        color brown
        font-size 14px

  &__colors-wrap
    position: absolute
    top: 100px
    right: 0
    z-index: 5
    @media only screen and (max-width: 1600px)
      right: 46px
    @media only screen and (max-width: 1400px)
      top: 0
    @media only screen and (max-width: 1260px)
      right: auto
      left: 40px
      .module-4__color-img-wrap
        order 1
        margin-right: 10px
        margin-left: 0
      span
        order 2!important
        text-align: left!important
    @media only screen and (max-width: 860px)
      width: 160px
      span
        font-size 12px
    @media only screen and (max-width: 700px)
      position: static
      display: flex
      justify-content space-between
      width: 100%
      margin-bottom: -50px
      margin-top: 40px
    @media only screen and (max-width: 600px)
      padding-left: 16px
      padding-right: 16px
    @media only screen and (max-width: 400px)
      span
        font-size 10px!important
        line-height: 16px!important

  &__color-line
    display: flex
    align-items center
    margin-bottom: 25px
    span
      width: calc(100% - 50px)
      font-weight: 600;
      font-size: 14px;
      line-height: 20px;
      text-align: right;
      text-transform: uppercase;
      color: brown;
      transition all .3s ease
      @media only screen and (max-width: 440px)
        font-size: 10px;
        line-height: 16px
    &:hover,
    &.active
      span
        color #FFFFFF
  &__color-img-wrap
    width: 40px
    height: 40px
    margin-left: 10px

  .single-image
    height 0
    z-index 0
    &.active
      height auto
      z-index: 1

  .color-price
    display: none

  .btn__open-tech
    position: static
    z-index: 3
    margin-top 100px
    height: auto
    @media only screen and (max-width: 1600px)
      margin-top: 60px
    @media only screen and (max-width: 1260px)
      margin-top: 0
      position: absolute
      left: 40px
      top -90px
    @media only screen and (max-width: 700px)
      left: 16px
    @media only screen and (max-width: 600px)
      position: static

  .module-4__sound-wrap
    @media only screen and (max-width: 600px)
      display: flex
      justify-content center
      //flex-wrap wrap
      width 100%
      //margin-top: 30px
      padding-top: 30px
    #motoSound
      display: none
    .module-4__sound-btn
      cursor pointer
      position: absolute
      height: 96px
      width: 96px
      border-radius 50%
      border 1px solid rgba(255,255,255,.3)
      display: flex
      justify-content center
      flex-wrap wrap
      align-items center
      z-index: 3
      right: 0
      bottom 140px
      @media only screen and (max-width: 1600px)
        right: 40px
      @media only screen and (max-width: 1260px)
        bottom auto
        top: -110px
      @media only screen and (max-width: 700px)
        right: 16px
      @media only screen and (max-width: 600px)
        position: relative
        left: auto
        top: auto
        right: auto
        //width: auto
        //height auto
        //padding: 6px 22px
        //border none
        //border-radius 19px
        //background-color: #272727
      .off-eng
        display: none
      .module-4__sound-btn-content
        //@media only screen and (max-width: 600px)
        //  display: flex
        //  align-items center
      &.active
        border 1px solid #CA0202
        span:not(.off-eng)
          display: none
        .off-eng
          display: block
        svg
          path
            stroke #fff
      svg
        display: block
        margin 0 auto 4px
        //@media only screen and (max-width: 600px)
        //  margin: 0 10px 0 0
      span
        display: block
        font-weight: 600;
        font-size: 10px;
        line-height: 16px;
        text-align: center;
        text-transform: uppercase;
        color: #FFFFFF;

#motoSoundCanvas {
  display: block;
  pointer-events none
  position absolute
  top 50%
  left: 50%
  transform translate(-50%,-50%)
  height: 320px
}


