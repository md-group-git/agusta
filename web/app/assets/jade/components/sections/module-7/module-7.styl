.module-7
  padding-top: 40px
  position: relative
  &__text-block
    h3
      text-align: right
      margin-bottom: 52px
      @media only screen and (max-width: 1024px)
        text-align: center
  .line
    width: 152px
    height: 2px
    background-color: white
    margin-bottom: 60px
    margin-left: auto
    @media only screen and (max-width: 1024px)
      margin-left: auto
      margin-right: auto
  &__blocks-wrap
    display: flex
    align-items center
    @media only screen and (max-width: 1024px)
      flex-wrap wrap
  &__text-block
    text-align: right
    order 2
    width: 543px
    padding-left: 160px
    @media only screen and (max-width: 1024px)
      order 1
      width: 100%
      padding-right: 0
      margin-bottom: 60px
      padding-left: 0
      text-align left
  &__slider-block
    order 1
    width: calc(100% - 543px)
    @media only screen and (max-width: 1024px)
      order 2
      width: 100%

  .slick-arrow
    cursor pointer
    margin-left: 57px
    margin-top: 4px
    z-index 2
    path
      fill #636363
      transition all .3s ease
    &:hover
      path
        fill white

  &__text
    @media only screen and (max-width: 1024px)
      text-align: justify
      max-width 785px
      margin-left: auto
      margin-right: auto
    @media only screen and (max-width: 460px)
      max-width 330px

  &__text-slider
    .slick-list
      width auto!important
      margin-left: 0!important
      margin-right: 0!important
    .slick-track
      @media only screen and (max-width: 1024px)
        display: flex
        justify-content center

  .slick-list
    overflow visible
    padding: 0!important
    @media only screen and (max-width: 1024px)
      width: 100vw
      margin-left: -27px
    @media only screen and (max-width: 600px)
      margin-left: -12px
    .module-7__slide
      @media only screen and (max-width: 1024px)
        margin-right: 80px
      @media only screen and (max-width: 768px)
        margin-right: 50px
      @media only screen and (max-width: 600px)
        margin-right: 30px
      img
        @media only screen and (max-width: 1024px)
          width: 78vw;
        @media only screen and (max-width: 640px)
          width: 314px;
        @media only screen and (max-width: 360px)
          width: 268.11px;

  &__slider-controls
    display: flex
    align-items center
    margin-top: 70px
    justify-content flex-end
    &--mob
      display: none
      @media only screen and (max-width: 1024px)
        display: flex
        margin-left: auto
        margin-right: auto
        order 3
    &--desct
      @media only screen and (max-width: 1024px)
        display: none

  &__arrows-wrap
    display: flex
    align-items center
    @media only screen and (max-width: 1024px)
      display: none

  &__counter
    display: flex
    align-items center
    font-weight: 700;
    z-index 2
    @media only screen and (max-width: 1024px)
      margin-left auto
      margin-right auto
    p
      font-weight 700
      font-size: 18px;
      line-height: 16px;
      text-align: center;
      text-transform: uppercase;
      margin-bottom: 0
      color #636363
    .counter__curent
      color white
      margin-right: 8px

  &__icon
    position: absolute
    left: 50%
    transform translateX(-50%)
    bottom: -90px
    z-index: 2