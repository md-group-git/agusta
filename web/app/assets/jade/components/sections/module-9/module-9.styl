.module-9
  position: relative
  padding-top: 200px
  @media only screen and (max-width: 1024px)
    padding-top: 120px
  &__circle-slider-description
    position absolute
    top: 120px
    left: 0
    @media only screen and (max-width: 1600px)
      max-width 240px
    @media only screen and (max-width: 1260px)
      position: static
      display: flex
      max-width inherit
      flex-wrap wrap
      justify-content space-between
      padding-top: 40px
      @media only screen and (max-width: 600px)
        padding-left: 15px
        padding-right: 15px
    .line-descr
      display: flex
      margin-bottom: 25px
      width: 100%
      @media only screen and (max-width: 1260px)
        width: 26%
        padding-right: 10px
      @media only screen and (max-width: 767px)
        width: 28%
      @media only screen and (max-width: 600px)
        width: 40%
      @media only screen and (max-width: 500px)
        width: 45%
      @media only screen and (max-width: 440px)
        width: 50%
      svg
        width: 40px
        height: 40px
    .line-descr-text
      margin-left: 12px
      width: calc(100% - 52px)
    .line-descr-title
      font-weight: 600;
      font-size: 10px;
      line-height: 16px;
      text-transform: uppercase;
      color: #FFFFFF;
      margin-bottom: 6px
    .line-descr-about
      ont-weight: 600;
      font-size: 18px;
      line-height: 16px;
      text-transform: uppercase;
      color: #FFFFFF;
      span
        color brown
        font-size 14px

  &__icon
    position: absolute
    left: 50%
    transform translateX(-50%)
    bottom: -60px
    z-index: 2

  &__block
    position: relative

  &__img-block
    width: 76%
    margin-left: auto
    margin-right: auto
    @media only screen and (max-width: 767px)
      width: 100%
    img
      margin-top: -100px
      @media only screen and (max-width: 400px)
        margin-top:-50px

  .tabs
    display: flex
    justify-content center
    flex-wrap wrap
    position: relative
    z-index: 2
    border-bottom none
    text-align: center
    @media only screen and (max-width: 992px)
      flex-wrap nowrap
      display: block
    .tab
      margin-right: 40px
      margin-bottom: 10px
      //@media only screen and (max-width: 1300px)
      //  margin-right: 40px
      a
        font-weight: 600;
        font-size: 24px;
        line-height: 29px;
        text-align: center;
        text-transform: none
        padding-bottom: 14px

  .btns-wrap
    display: flex
    justify-content center
    @media only screen and (max-width: 767px)
      flex-wrap wrap
      width: 100%
    @media only screen and (max-width: 412px)
      justify-content center
      margin-top: 12px


  .btn
    margin: 0 18px
    text-transform: uppercase
    width: 235px
    justify-content center
    @media only screen and (max-width: 1260px)
      margin-top: 20px
    @media only screen and (max-width: 992px)
      padding-left: 14px
      padding-right: 14px
    @media only screen and (max-width: 600px)
      font-size 12px
      line-height: 14px;


  .btn--black
    background-color: #000000
    border none
    span
      color #fff
      margin-top: 0
      @media only screen and (max-width: 600px)
        margin-top: 2px
    &:hover
      background-color: #fff
      span
        color #000


  .btn--grey
    background-color: #272727
    border none
    span
      color #fff
      margin-top: 0
      @media only screen and (max-width: 600px)
        margin-top: 2px
    &:hover
      background-color: #fff
      span
        color #272727

  .check-ride
    position relative
    &.active
      width: 235px
      background-color: #fff
      span
        font-size 0
        line-height: 0
      &:after
        content ''
        display: block
        width: 30px
        height: 20px
        position: absolute
        top: 50%
        left: 50%
        transform translate(-50%,-50%)
        background url("/img/icon-check.svg") center no-repeat
        background-size cover





