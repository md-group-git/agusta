.s-404
  background url("/img/404-bg.jpg") center no-repeat
  background-size: cover;
  height: 100%
  margin: 0
  display: flex
  align-items center
  justify-content center
  &__content
    display: flex
    justify-content center
    align-items center

  &__image
    display: block
    margin-bottom: 52px
    margin-left: auto
    margin-right: auto
  &__text
    font-size: 24px;
    line-height: 25px;
    text-align: center;
    color: #FFFFFF;
    text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    @media only screen and (max-width: 400px)
      font-size: 18px;
      line-height: 20px;

  .btn-wrap
    margin-top: 46px
    display: flex
    justify-content center
    .btn
      padding-top: 12px
      padding-bottom: 12px
      padding-left: 50px
      padding-right: 50px
      background-color: #000000
      border none
      span
        text-transform: uppercase
        font-weight: 600;
        font-size: 14px;
        line-height: 17px;
        color white
      &:hover
        background-color: white
        span
          color #000000
          font-weight: 600;