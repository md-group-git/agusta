.s-footer
  padding-bottom: 60px
  padding-top: 60px
  position: relative
  @media only screen and (max-width: 600px)
    padding-top: 100px
  .container
    max-width 1200px

  &__wrap
    display: flex
    justify-content space-between
    align-items flex-start
    @media only screen and (max-width: 600px)
      flex-wrap wrap

  &__block
    width: 33%
    &:nth-child(1),
    &:nth-child(3)
      margin-top: 60px
      @media only screen and (max-width: 600px)
        order 1
        width: 50%
    &:nth-child(2)
      display: flex
      flex-wrap wrap
      justify-content center
      @media only screen and (max-width: 600px)
        order 2
        width: 100%
    &:nth-child(1)
      position: relative;
      &:after
        content ''
        display: none
        position: absolute
        right: -2px
        top: 50%
        transform translateY(-50%)
        background url("/img/icon-line-3.svg") center no-repeat
        height: 310px
        width: 2px
        @media only screen and (max-width: 600px)
          display: block


  &__block-title
    font-weight: 600;
    font-size: 24px;
    line-height: 38px;
    text-transform: uppercase;
    color: white;
    margin-bottom: 30px
  &__block-contact
    display: flex
    align-items center
    margin-bottom: 20px
    @media only screen and (max-width: 992px)
      flex-wrap wrap
      a
        width: 100%
        margin-left: 0!important
    p
      margin: 0
      color white
    a
      color white
      text-decoration: none
      margin-left: 6px
      font-size 16px
      @media only screen and (max-width: 400px)
        font-size 14px

  &__socials-wrap
    display: flex
    justify-content center
    align-items center
    width: 100%
    margin-top: 20px

  &__social-link
    margin: 15px
    display: flex
    align-items center
    width 18px
    justify-content center
    svg
      max-width 100%
    path
      transition all .3s ease
    &:hover
      path
        fill brown

  &__policy
    font-size: 14px;
    line-height: 25px;
    text-align: center;
    text-decoration-line: underline;
    transition all .3s ease
    color white
    &:hover
      color brown

  &__link
    font-size: 18px;
    line-height: 22px;
    text-align: right;
    text-transform: uppercase;
    color white
    display: block
    margin-bottom: 20px
    @media only screen and (max-width: 600px)
      margin-bottom: 32px
    @media only screen and (max-width: 400px)
      font-size: 14px;
      line-height: 30px;
      margin-bottom: 22px
    &:hover
      color brown

  &__overlay
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    height: 100%
    background: linear-gradient(180deg, #000000 0%, rgba(0, 0, 0, 0) 100%);
    transform: matrix(1, 0, 0, -1, 0, 0);

  .brand-logo
    @media only screen and (max-width: 600px)
      position: absolute
      top: -72px
      left: 50%
      transform translateX(-50%)
    img
      width: 159px
