.s-map
  padding-top: 0
  padding-bottom: 0
  position: relative
  background: #161616;
  .gm-style-cc,
  .gm-fullscreen-control,
  .gmnoprint
    display: none !important

  &__modal
    position: absolute
    top: 150px
    left: 0
    width: 532px
    z-index: 2
    @media only screen and (max-width: 1200px)
      width: 350px
    @media only screen and (max-width: 768px)
      position: static
      width: 100%
      padding-top: 80px

  &__modal-descr
    background-color: #161616;
    padding: 26px

  &__modal-title
    display: flex
    flex-wrap wrap
    justify-content center
    p
      font-weight: 700;
      font-size: 24px;
      line-height: 29px;
      text-align: center;
      text-transform: uppercase;
      color: #FFFFFF;

  &__modal-address
    position: relative
    padding-left: 38px
    width: 100%
    font-size: 18px;
    color #fff
    margin: 23px 0
    &:before
      content ''
      display: block
      width: 20px
      height: 24px
      position: absolute
      left: 0
      top: 2px
      background url("/img/icon-contact-location.svg") center no-repeat

  &__modal-phone
    display: block
    position: relative
    padding-left: 38px
    width: 100%
    font-size: 18px;
    color #fff
    margin: 23px 0
    &:before
      content ''
      display: block
      width: 20px
      height: 20px
      position: absolute
      left: 0
      top: 2px
      background url("/img/icon-contact-phone.svg") center no-repeat

  &__modal-mail
    display: block
    position: relative
    padding-left: 38px
    width: 100%
    font-size: 18px;
    color #fff
    margin: 23px 0
    &:before
      content ''
      display: block
      width: 22px
      height: 18px
      position: absolute
      left: 0
      top: 4px
      background url("/img/icon-contact-mail.svg") center no-repeat

  &__modal-whatspp
    display: block
    position: relative
    padding-left: 38px
    width: 100%
    font-size: 18px;
    color #fff
    margin: 23px 0
    &:before
      content ''
      display: block
      width: 22px
      height: 22px
      position: absolute
      left: 0
      top: 2px
      background url("/img/icon-whatsapp.svg") center no-repeat
      background-size: contain;

  &__iframe-map
    width: 100vw
    height: 100vh

  &__overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 115px
    background: linear-gradient(180deg, #000000 0%, rgba(0, 0, 0, 0) 100%);

  #map
    height: 1100px;
    width: 100%;
    @media only screen and (max-width: 768px)
      height: 600px
