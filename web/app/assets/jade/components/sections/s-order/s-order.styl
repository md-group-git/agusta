.s-order
  position: relative

  &__icon
    position: absolute
    left: 50%
    transform translateX(-50%)
    bottom: -90px
    z-index: 2

  &__title
    margin-bottom: 30px
    font-weight: 700;
    font-size: 24px;
    line-height: 29px;
    text-align: center;
    text-transform: uppercase;
    color: #FFFFFF;

  &__form
    max-width 525px
    margin-left: auto
    margin-right: auto