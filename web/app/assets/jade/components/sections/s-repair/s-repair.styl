.s-repair
  background url("/img/repaire-bg.jpg") center no-repeat
  background-size: cover;
  height: 100%
  margin: 0
  padding: 0 20px
  display: flex
  align-items center
  justify-content center
  &__content
    display: flex
    justify-content center
    align-items center

  &__logo
    display: block
    width: 235px
    margin-bottom: 40px
    margin-right: auto
    margin-left: auto

  &__text
    font-size: 24px;
    line-height: 25px;
    text-align: center;
    color: #FFFFFF;
    text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    @media only screen and (max-width: 400px)
      font-size: 18px;
      line-height: 20px;

  &__img
    margin-top: 46px
    display: block
    margin-left: auto
    margin-right: auto