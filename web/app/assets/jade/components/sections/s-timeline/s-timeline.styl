.s-timeline

  h2
    margin-bottom: 0

  &__text-block
    h3
      font-weight: 700
      margin-bottom: 40px
      @media only screen and (max-width: 1024px)
        text-align: center
    @media only screen and (max-width: 1024px)
      margin-bottom: 60px
  .line
    width: 152px
    height: 2px
    background-color: white
    margin-bottom: 40px
    @media only screen and (max-width: 1024px)
      margin-left: auto
      margin-right: auto
  &__blocks-wrap
    display: flex
    align-items flex-start
    @media only screen and (max-width: 1024px)
      flex-wrap wrap
  &__text-block
    width: 543px
    padding-right: 160px
    @media only screen and (max-width: 1024px)
      width: 100%
      padding-right: 0
  &__img-block
    width: calc(100% - 543px)
    @media only screen and (max-width: 1024px)
      width: 100%

  &__top-slide
    padding: 160px 0 160px
    background-repeat no-repeat
    background-position: center;
    background-size cover

  &__bottom-slider
    width: 100vw
    margin-top: 38px
    .slick-arrow
      width: 22px
      height: 38px
      display: flex
      justify-content center
      align-items center
      z-index 2
      cursor pointer
      position: absolute
      top: 0
      svg
        width: 100%
        height: 100%
        path
          transition all .3s ease
      &:hover
        svg
          path
            stroke brown
    .prev-btn
      left: 50%
      transform translateX(-130px)
    .next-btn
      right: 50%
      transform translateX(130px)

  &__bottom-slide
    width: 270px
    padding-left: 24px
    cursor pointer
    &:hover
      .s-timeline__year
        color white
      .s-timeline__bottom-line
        &:nth-child(5)
          background-color: white

  &__year
    font-weight: 600;
    font-size: 24px;
    line-height: 29px;
    text-align: center;
    color: rgba(255,255,255,.2)
    margin-right: 26px
    transition all .3s ease

  &__bottom-lines-wrap
    display: flex
    flex-wrap wrap
    justify-content space-between
    align-items flex-end
    width: 100%

  &__bottom-line
    height: 32px
    background-color: #656565
    width: 2px
    transition all .3s ease
    &:nth-child(5)
      height: 65px
    &:nth-child(10)
      height: 50px

  .slick-center
    .s-timeline__year
      font-size: 40px;
      line-height: 48px;
      color white
      margin-bottom: 12px
      margin-top: -6px
    .s-timeline__bottom-line
      &:nth-child(5)
        background-color: white

  &__top-slider-wrap
    position: relative


  &__arrows-wrap
    display: flex
    align-items center
    @media only screen and (max-width: 1024px)
      display: none

  &__top-counter
    display: flex
    align-items center
    font-weight: 700;
    z-index 2
    @media only screen and (max-width: 1024px)
      justify-content center
      margin-left auto
      margin-right auto
    p
      font-weight 700
      font-size: 18px;
      line-height: 16px;
      text-align: center;
      text-transform: uppercase;
      margin-bottom: 0
      color #636363
    .counter__curent
      color white
      margin-right: 8px

  &__top-arrows-wrap
    display: flex
    align-items center
    @media only screen and (max-width: 1024px)
      display: none


  &__top-slider-controls
    display: flex
    align-items center
    margin-top: 70px
    position: absolute
    bottom: 60px
    left: 0
    z-index: 3

  .s-timeline__top-arrow
    cursor pointer
    margin-left: 57px
    margin-top: 4px
    path
      fill #636363
      transition all .3s ease
    &:hover
      path
        fill white



