.service-form
  padding-top: 200px

  &__form
    max-width 525px
    margin-left: auto
    margin-right: auto

  &__icons-wrap
    display: flex
    justify-content space-between
    flex-wrap wrap
    max-width 1100px
    margin-left: auto
    margin-right: auto

  &__icon-block
    margin-bottom: 40px
    width: 320px
    @media only screen and (max-width: 1024px)
      width: 100%
    span
      font-size 24px
      line-height: 30px
      text-align: center
      font-weight: 700
      color white
      text-transform: uppercase
      display: block

  &__icon-wrap
    margin-bottom: 16px
    display: flex
    justify-content center
    height: 150px
    align-items flex-end